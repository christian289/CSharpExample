<UserControl x:Class="DxMvvmWpfDataTemplateNavigationExample.Views.SubView2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DxMvvmWpfDataTemplateNavigationExample.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=SubView2ViewModel}">
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <TextBlock Text="{Binding Message}"
                   FontSize="30"/>
    </Grid>
</UserControl>
